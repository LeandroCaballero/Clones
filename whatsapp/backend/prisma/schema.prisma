generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        Int       @id @default(autoincrement())
    createdAt DateTime  @default(now()) @db.Timestamp(6)
    updatedAt DateTime  @updatedAt
    name      String
    email     String
    password  String
    Message   Message[]
    Group     Chat[]
}

model Chat {
    id        Int       @id @default(autoincrement())
    createdAt DateTime  @default(now()) @db.Timestamp(6)
    updatedAt DateTime
    name      String?
    image     String?
    type      ChatType
    Message   Message[]
    User      User[]
}

model Message {
    id             Int         @id @default(autoincrement())
    createdAt      DateTime    @default(now()) @db.Timestamp(6)
    updatedAt      DateTime
    userId         Int
    chatId         Int
    messageType    MessageType
    message        String?
    image          String[]
    video          String[]
    audio          String[]
    forwardedCount Int         @default(0)
    chat           Chat?       @relation(fields: [chatId], references: [id])
    createBy       User        @relation(fields: [userId], references: [id])
}

enum ChatType {
    Direct
    Group
}

enum MessageType {
    Text
    Audio
    Video
    Image
}
